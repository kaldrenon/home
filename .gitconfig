[core]
  editor = nvim
[user]
  name = Andrew Fallows
  email = andrew.fallows@intervarsity.org

[grep]
  linenumber = true

[github]
  user = kaldrenon

[credential]
  helper = store

[credential "https://github.com"]
  user = kaldrenon

[credential "http://github.com"]
  user = kaldrenon

[help]
  autocorrect = 1

[color]
  ui = true

[init]
  templatedir = ~/.git_template

[push]
  default = current

[alias]
  b     = branch
  bc    = for-each-ref --sort='-*committerdate' --format="%(refname:short)" refs/heads/
  bm    = "!source ~/.githelpers && list_merged"
  ca    = commit --amend
  cm    = commit -m
  cp    = cherry-pick
  co    = checkout
  d     = diff
  dc    = diff --cached
  dcf   = diff --cached --name-only
  dh    = "!f() { echo $1; git diff $1^ $1; }; f"
  dhf   = "!f() { echo $1; git diff --name-only $1^ $1; }; f"
  dl    = diff 'HEAD^1' HEAD
  dlf   = diff 'HEAD^1' HEAD --name-only
  ds    = stash show -p stash@{0}
  l     = "!source ~/.githelpers && pretty_git_log"
  rb    = "!source ~/.githelpers && review_code"
  rhh   = reset --hard HEAD
  td    = log --pretty='tformat: * %s'
  tl    = "!f() { git describe --tags `git rev-list --tags --max-count=1`; }; f"
  tls   = "!f() { echo \"# `git tl` / `date +\"%Y-%m-%d\"`\"; }; f"
  tv    = "!f() { git tag -a $1 -m $1 $2; }; f"
  s     = status

  cached-changes = diff --cached --name-only --diff-filter=AM
  changes        = diff --name-only --diff-filter=AM
  cleanup        = "!git stash && git add -A && git reset --hard HEAD && git status"
  conflicts      = diff --name-only --diff-filter=U
  gui            = "!sh -c '/usr/local/opt/git/libexec/git-core/git-gui'"
  release-notes  = "!source ~/.githelpers && release_notes"
  review         = "!f() { git push origin HEAD:refs/for/$1; }; f"
  tag-version    = "!f() { git tag -a $1 -m $1 $2; };"

  aa = "!clear; git add -A; git status"
