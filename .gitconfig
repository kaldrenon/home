[user]
  name = Andrew Fallows
  email = kaldrenon@gmail.com

[grep]
  linenumber = true

[credential]
  helper = store

[credential "https://github.com"]
  user = kaldrenon

[credential "http://github.com"]
  user = kaldrenon

[help]
  autocorrect = 1

[color]
  ui = true

[init]
  templatedir = ~/.git_template

[push]
  default = current

[alias]
  ca = commit --amend
  cm = commit -m
  co = checkout
  d  = diff
  dc = diff --cached
  s  = status

  changes        = diff --name-only --diff-filter=AM
  cached-changes = diff --cached --name-only --diff-filter=AM
  conflicts      = diff --name-only --diff-filter=U
